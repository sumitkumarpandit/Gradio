<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".MainActivity">
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:background="@drawable/gradio_icon"
        ></ImageView>
    <TextView
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="20dp"
        android:text="Gradio"
        android:textSize="15pt">
    </TextView>
    <ImageView
        android:id="@+id/down"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="120pt"
        android:layout_marginLeft="85pt"
        android:background="@drawable/right_arrow"
        android:rotation="90"
        android:layout_gravity="top"/>
    <ImageView
        android:id="@+id/up"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="65pt"
        android:layout_marginLeft="85pt"
        android:background="@drawable/right_arrow"
        android:rotation="270"
        android:layout_gravity="bottom"/>
    <ImageView
        android:id="@+id/left"
    android:layout_width="40dp"
    android:layout_height="40dp"
        android:layout_marginTop="90pt"
        android:layout_marginLeft="55pt"
        android:background="@drawable/right_arrow"
        android:rotation="180"
        android:layout_gravity="center"/>
    <ImageView
        android:id="@+id/right"
    android:layout_width="40dp"
    android:layout_height="40dp"
        android:layout_marginTop="90pt"
        android:layout_marginLeft="115pt"
        android:background="@drawable/right_arrow"
        android:layout_gravity="center"/>
    <Button
        android:id="@+id/gradient"
        android:layout_width="117dp"
        android:layout_height="76dp"
        android:layout_marginTop="180pt"
        android:layout_marginLeft="30pt"
        android:gravity="center"
        android:background="@drawable/shape_layout"
        android:text="#33FFDD"
        android:textColor="@drawable/button_text_color"
        android:textSize="20sp" />
    <Button
        android:id="@+id/gradient2"
        android:layout_width="117dp"
        android:layout_height="76dp"
        android:layout_marginTop="180pt"
        android:layout_marginLeft="100pt"
        android:background="@drawable/gradient_button"
        android:text="#A233FF"
        android:textColor="@drawable/button_text_color"
        android:gravity="center"
        android:textSize="20sp" />

    <Button
        android:id="@+id/generate"
        android:layout_width="120pt"
        android:layout_height="40pt"
        android:layout_marginTop="250pt"
        android:layout_marginLeft="32pt"
        android:background="@drawable/generate_layout"
        android:gravity="center"
        android:text="Generate"
        android:textSize="25sp" />
</RelativeLayout>